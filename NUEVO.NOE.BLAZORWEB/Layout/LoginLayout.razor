@using MudBlazor
@using Radzen.Blazor
 @inject ISessionStorageService sessionStorage
 @inject NavigationManager navigationManager
@inherits LayoutComponentBase

<HeadContent>
    <link href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <link href="_content/Radzen.Blazor/css/default-base.css" rel="stylesheet" />
    <script src="_content/CurrieTechnologies.Razor.SweetAlert2/sweetAlert2.min.js"></script>
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
</HeadContent>

<body style="font-family:Montserrat">
    <div class="d-flex flex-column " style="min-height:100vh; ">
        <div style="z-index:2  ;background:linear-gradient(to right, rgba(15, 15, 15, 0.8) 0%, rgba(15, 15, 15, 0.2) 50%, rgba(15, 15, 15, 0.8) 100%);height:100%;width:100%;position:fixed;url('img/modificado.png') no-repeat center center; background-size: contain ">
        </div>
        <img src="img/semana_18.jpg" class="w-100 h-100 position-fixed" alt="Alternate Text" style="z-index:1" />

        <MudThemeProvider />
        <MudDialogProvider />
        <MudSnackbarProvider />
        <MudPopoverProvider />
        <RadzenComponents />

        <header class="d-flex flex-column w-100" style="z-index:4">
            <div style="background-color:#242c4f;border-bottom: 2mm ridge rgba(237, 169, 63, .6);" class="w-100 gap-2 text-white d-flex align-items-center justify-content-around rounded-top-3">
                <img src="img/image.png" class="mr-3 mt-1" style="height:4rem;width:auto" alt="IGJ Logo" />
                <div class="d-flex align-items-center">
                    <img src="img/logo-bandera-escudo.svg" class="mr-3" style="height:3rem;width:auto" alt="Argentina logo" />
                    <span class="text-nowrap text-lg fw-bolder">
                        2024 - Año de la Defensa de la Vida, la Libertad y la Propiedad
                    </span>
                </div>
            </div>

        </header>

        <div class="flex-grow-1 flex-column d-flex" style="z-index:3">
            @Body
        </div>

        <footer style="background-color:#242c4f;border-top: 2mm ridge rgba(237, 169, 63, .6);min-height:3rem;z-index:3" class="w-100 gap-2 text-white d-flex align-items-center justify-content-center rounded-top-3">
            <Span>Av. Paseo Colon 285, CABA -</Span>
            <Span>Tel: 5300-4000 -</Span>
            <Span>Email: infoigj@jus.gov.ar</Span>

        </footer>
    </div>

</body>


